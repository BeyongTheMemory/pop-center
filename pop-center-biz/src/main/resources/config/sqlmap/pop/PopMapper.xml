<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pop.center.dao.PopDAO">

	<sql id="Base_Column_List">
		id,type,longitude,latitude,altitude,user_id,user_name,model,update_time,add_time,is_showy
	</sql>


	<insert id="save" parameterType="com.pop.center.entity.PopEntity" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO pop_basic
		(
		type,longitude,latitude,altitude,user_id,user_name,model,is_showy
		)
		VALUES
		(
        #{type},#{longitude},#{latitude},#{altitude},#{userId},#{userName},#{model},#{isShowy}
		)
	</insert>

	<select id="getByLatLon" parameterType="java.util.Map" resultType="com.pop.center.entity.PopEntity">
		SELECT <include refid="Base_Column_List"/>
		FROM pop_basic
		WHERE
		<![CDATA[
		longitude < #{lonMax} AND longitude > #{lonMin} AND latitude < #{latMax} AND latitude > #{latMin} AND state = 1
		]]>
	</select>







</mapper>